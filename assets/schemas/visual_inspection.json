{
  "title": "Visual Inspection Report",
  "standard": [
    "AWS D1.1",
    "ISO 17637",
    "ISO 3834"
  ],
"standards": {
    "AWS D1.1": {
      "details": [
        { "key": "acceptance_ref", "label": "Acceptance Ref", "type": "static", "value": "AWS D1.1 (Inspection & acceptance)" },
        { "key": "connection_type", "label": "Connection Type", "type": "choice", "choices": ["Static", "Cyclic"] }
      ],
      "tables": [
        { "key": "observations", "columns_overrides": { "result": { "choices": ["Accept", "Repair"] } } }
      ]
    },
    "ISO 17637": {
      "details": [
        { "key": "acceptance_ref", "label": "Acceptance Ref", "type": "static", "value": "ISO 5817" },
        { "key": "quality_level", "label": "ISO 5817 Quality Level", "type": "choice", "choices": ["B", "C", "D"] }
      ],
      "tables": [
        { "key": "observations", "columns_overrides": { "result": { "choices": ["Accept", "Rework", "Reject"] } } }
      ]
    },
    "ISO 3834": {
      "details": [
        { "key": "quality_requirements", "label": "Quality Requirements", "type": "choice", "choices": ["Part 2", "Part 3", "Part 4"] }
      ]
    }
  },

  "details": [
    { "key": "project_name", "label": "Project", "shared": true },
    { "key": "client", "label": "Client", "shared": true },
    { "key": "location", "label": "Location", "shared": true },
    { "key": "document_no", "label": "Document No.", "shared": true },
    { "key": "date", "label": "Date", "type": "date", "shared": true },
    { "key": "inspector", "label": "Inspector", "shared": true },
    { "key": "joint_id", "label": "Joint/Member ID" },
    { "key": "stage", "label": "Stage", "type": "choice", "choices": ["Pre-weld", "In-process", "Post-weld"] },
    { "key": "remarks", "label": "Remarks" }
  ],
  "tables": [
    {
      "key": "observations",
      "label": "Observations",
      "minRows": 3,
      "columns": [
        { "key": "feature", "label": "Feature", "type": "text", "width": 160 },
        { "key": "measurement", "label": "Measurement", "type": "text", "width": 120 },
        { "key": "result", "label": "Result", "type": "choice", "choices": ["Accept", "Reject"], "width": 110 },
        { "key": "comments", "label": "Comments", "type": "text", "width": 200 }
      ]
    }
  ]
}
