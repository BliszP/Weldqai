rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Admin helper — mirrors the Firestore isAdmin() function.
    // Only the account listed here can write to shared/branding paths.
    function isAdmin() {
      return request.auth != null
          && request.auth.token.email == 'alvespeters@gmail.com';
    }

    // Public read for branding images; admin-only write.
    // Any authenticated user being able to overwrite branding assets
    // is a content-injection risk.
    match /branding/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Report photos and exports — owner only.
    // Path: reports/{userId}/{schemaId}/{reportId}/...
    match /reports/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Chat channel attachments — owner write, collaborators read.
    // Collaborator check mirrors the Firestore isCollaborator() helper.
    match /users/{userId}/channels/{channelId}/attachments/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        firestore.get(
          /databases/(default)/documents/users/$(userId)/sharedWith/$(request.auth.uid)
        ).data.permissions.hasAny(['read'])
      );
    }

    // All other user-scoped storage — owner only.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny everything else.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
